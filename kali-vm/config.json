{
    "variables": {
        "iso_url": "https://cdimage.kali.org/kali-2021.1/kali-linux-2021.1-installer-amd64.iso",
        "iso_checksum": "265812bc13ab11d40c610424871bdf9198b9e7cad99b06540d96fac67dd704de"
    },
    "builders": [
        {
            "type": "qemu",
            "cpus": 2,
            "memory": 2048,
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "sha256:{{user `iso_checksum`}}",
            "output_directory": "./images/",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "format": "qcow2",
            "accelerator": "kvm",
            "headless": true,
            "http_directory": "http",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "180m",
            "vm_name": "kali.qcow2",
            "net_device": "virtio-net",
            "disk_interface": "virtio-scsi",
	          "disk_discard": "unmap",
      	    "disk_detect_zeroes": "unmap",
            "disk_cache": "unsafe",
            "disk_image": false,
            "disk_compression": true,
            "boot_wait": "5s",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "locale=en_US ",
                "keymap=us ",
                "hostname=kali ",
                "domain='' ",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S bash -euxo pipefail '{{.Path}}'",
          "scripts": [
            "scripts/vagrant.sh",
            "scripts/minimize.sh"
          ]
        }
      ]
}
